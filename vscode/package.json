{
  "name": "zeek-language-server",
  "displayName": "Zeek",
  "description": "Zeek language support for Visual Studio Code",
  "author": "Benjamin Bannier",
  "version": "0.8.0",
  "license": "MIT",
  "publisher": "bbannier",
  "preview": true,
  "private": true,
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "language server",
    "zeek"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bbannier/zeek-language-server.git"
  },
  "bugs": {
    "url": "https://github.com/bbannier/zeek-language-server/issues"
  },
  "homepage": "https://github.com/bbannier/zeek-language-server",
  "engines": {
    "vscode": "^1.52.0"
  },
  "activationEvents": [
    "onLanguage:zeek"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Path to zeek-language-server",
      "properties": {
        "zeekLanguageServer.path": {
          "type": "string",
          "default": "",
          "description": "Full path to the zeek-language-server executable. If unset we will attempt to look it up in PATH."
        }
      }
    },
    "languages": [
      {
        "id": "zeek",
        "aliases": [
          "Zeek",
          "Bro",
          "bro",
          "zeek"
        ],
        "extensions": [
          ".bro",
          ".zeek"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "sig",
        "aliases": [
          "Signature",
          "signature",
          "Sig",
          "sig"
        ],
        "extensions": [
          ".sig"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "zeek",
        "scopeName": "source.zeek",
        "path": "./syntaxes/zeek.json"
      },
      {
        "language": "sig",
        "scopeName": "source.sig",
        "path": "./syntaxes/sig.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -b",
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint --ext=ts .",
    "vsix": "vsce package -o zeek-language-server.vsix"
  },
  "dependencies": {
    "got": "^11.8.2",
    "vscode-languageclient": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.18",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "mocha": "^9.2.1",
    "typescript": "^4.4.3",
    "vsce": "^2.6.7"
  }
}
